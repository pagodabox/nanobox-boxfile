build:
  type: php
  version: 5.4
  stability: production
  exec:
    - 'gem install'
    - "composer install --no-interaction --prefer-source"
  lib_dir: vendor
  reuse_libs: true
  
web1:
  name: site
  type: php
  version: 5.4
  stability: production
  network_dirs:
    storage1:
      - usr/uploads
  httpd_document_root: app
  php_extensions:
    - mysql
    - gd
    - eaccelerator
  
database1:
  name: posts
  type: mysql
  topology: redundant
  
storage1:
  name: filestore
  type: nfs
  
cache1:
  name: sessions
  type: redis
  
worker1:
  name: image_processor
  type: php
  exec: 'php workers/image_processor.php'